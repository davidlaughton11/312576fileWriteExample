<Window x:Class="_312576fileWriterExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_312576fileWriterExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="txtFileName">s.txt</TextBox>
        <TextBox x:Name="txtInput">3</TextBox>
        <Button x:Name="btnWrite" Click="btnWrite_Click" Height="21">btnWrite</Button>
        <Button x:Name="btnAppend" Click="btnAppend_Click" Height="21">btnAppend</Button>
        <Button x:Name="btnsquares" Click="btnsquares_Click"  Height="21">btnSquares</Button>
    </StackPanel>
</Window>
